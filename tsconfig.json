{
	"ts-node": {
        "files": true,
		"require": ["./tools/registerhbs.js"],
        "compilerOptions": {
            "esModuleInterop": true
        }
    },
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ESNext",
        "lib": ["ESNext"],
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"declaration": true,
		"pretty": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"module": "CommonJS",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"importsNotUsedAsValues": "error",
	},
	"include": [
		"packages/**/index.ts",
		"packages/**/*.test.ts",
		"packages/**/types/*.d.ts",
	],
	"exclude": [
		"node_modules",
		"**/lib/**",
		"**/*.js",
		"**/*.mjs"
	]
}